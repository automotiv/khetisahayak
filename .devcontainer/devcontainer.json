{
  "name": "Kheti Sahayak Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/anthropics/devcontainer-features/flutter:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [3000, 5432, 8000, 8080],
  "portsAttributes": {
    "3000": { "label": "Backend API", "onAutoForward": "notify" },
    "5432": { "label": "PostgreSQL", "onAutoForward": "silent" },
    "8000": { "label": "ML Service", "onAutoForward": "notify" },
    "8080": { "label": "Frontend", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "cd kheti_sahayak_backend && npm install && cd ../frontend && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[dart]": {
          "editor.defaultFormatter": "Dart-Code.dart-code"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        }
      }
    }
  },
  "remoteEnv": {
    "NODE_ENV": "development",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "kheti_sahayak",
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres"
  }
}
