<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration - HTTPS only for security -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificates (CA certificates) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Debug builds can still use localhost for development and testing -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user-installed certificates for debugging -->
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
